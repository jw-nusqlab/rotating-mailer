# Database Configuration
MONGODB_URI=mongodb://localhost:27017/rotating-mailer

# Redis Configuration (optional - only needed if QUEUE_MODE=bullmq)
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Security
SECRET_KEY=your-secret-key-32-chars-minimum-change-in-production

# Queue Configuration
QUEUE_MODE=inline
PROCESS_BATCH_SIZE=5

# Email Configuration
SEND_DELAY_MS=300
MAX_RETRIES_PER_EMAIL=3
ACCOUNT_FAILURE_LIMIT=5
ACCOUNT_DISABLE_MINUTES=20

# Google OAuth2 Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_CALLBACK_URL=https://yourapp.com/api/accounts/oauth2/callback

# Seed Account Configuration (for development/testing)
SEED_EMAIL=sender@example.com
SEED_SMTP_HOST=smtp.gmail.com
SEED_SMTP_PORT=587
SEED_SMTP_SECURE=false
SEED_SMTP_PASS=your-app-password
